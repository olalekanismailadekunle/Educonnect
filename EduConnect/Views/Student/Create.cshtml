@using EduConnect.Enums
@model EduConnect.DTOs.StudentRequestModel  
<body>
	<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>Register Form</h3>

        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i>Kindly register a Student</h4>
                    <form asp-action="Create" class="form-horizontal tasi-form" enctype="multipart/form-data">
                        <div class="form-group has-success">
                            <label asp-for="FirstName" class="col-sm-2 control-label col-lg-2"
                                for="inputSuccess">FirstName</label>
                            <div class="col-lg-10">
                                <input asp-for="FirstName" type="text" class="form-control" id="inputSuccess"
                                    required />
                            </div>
                        </div>
                        <div class="form-group has-warning">
                            <label class="col-sm-2 control-label col-lg-2" for="inputWarning">LastName</label>
                            <div class="col-lg-10">
                                <input asp-for="LastName" type="text" class="form-control" id="inputWarning" required />
                            </div>
                        </div>
                         <div class="form-group">
                            <label asp-for="HouseNumber" class="control-label"></label>
                            <input asp-for="HouseNumber" class="form-control" />
                            <span asp-validation-for="HouseNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StreetName" class="control-label"></label>
                            <input asp-for="StreetName" class="form-control" />
                            <span asp-validation-for="StreetName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="State" class="control-label"></label>
                            <select style="scrollbar-3dlight-color:blue" asp-for="State" asp-items="ViewBag.States" id="state"> </select>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LGAOfResidence" class="control-label"></label>
                            <select style="scrollbar-3dlight-color:blue" asp-for="LGAOfResidence" id="lga"> </select>
                            <span asp-validation-for="LGAOfResidence" class="text-danger"></span>
                        </div>
                          <div>
                            <label>Level</label>
                            <select asp-for="Level" asp-items="@Html.GetEnumSelectList(typeof(Level))"  >
                                 <option selected disabled>--Select Level</option>
                            </select>
                            </div>
                              <div class="form-group">
                <label asp-for="SubjectIds" class="control-label">Subjects</label>
                <select style="scrollbar-3dlight-color:blue" asp-for="SubjectIds" asp-items="ViewBag.Subjects" multiple> </select>
                <span asp-validation-for="SubjectIds" class="text-danger"></span>
            </div>
                             @*  <div class="form-group">
                            <label asp-for="SubjectIds" class="control-label"></label>
                            <select style="scrollbar-3dlight-color:blue" asp-for="SubjectIds" asp-items="ViewBag.Subjects" >Subjects</select>
                            <span asp-validation-for="SubjectIds" class="text-danger"></span>
                           </div>*@
                        <div class="form-group ">
                            <input type="submit" value="Submit"
                                class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>  
</section>
    <div class="btn btn-primary">
    <a asp-controller="User" asp-action="RedirectToDashBoard" style="color:white">Back to DashBoard</a>
     </div>
 <script src="~/js/index.js" asp-append-version="true"></script>
</body>
