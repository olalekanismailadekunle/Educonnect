@model EduConnect.DTOs.ParentDto

<section id="main-content">
    <section class="wrapper">
        <div style="font-size: 130%;">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    ID:
                </dt>
                <dd class="col-sm-10">
                    @Model.FirstName
                </dd>
                <dt class="col-sm-2">
                    NAME:
                </dt>
                <dd class="col-sm-10">
                    @Model.FirstName @Model.LastName
                </dd>
                
               
            </dl>
            <span>Are you sure you want to delete this Parent</span>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" required/> 

            </form>
               <div class="btn btn-primary">
    <a asp-controller="User" asp-action="RedirectToDashBoard" style="color:white">Back to DashBoard</a>
     </div>
             <div class="btn btn-primary">
                <a style="color:white;" asp-controller="Parent" asp-action="Index">Back to list</a>
            </div>
        </div>
    </section>
</section>
 
